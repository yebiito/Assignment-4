<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title %></title>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>

<header>
    <div class="logo">
        <div class="circle"></div>
        <h1>Yafri FM</h1>
    </div>
    <div class="role">DJ Role</div>
    <button class="user-button"><%= user %></button>
</header>

        <div class="container">
            <nav class="sidebar">
                <button class="toggle-btn" onclick="toggleSidebar()">â˜°</button> 
                <ul id="barcontent">
                    <li><a href="/maindj"><button class="nav-btn">Main Menu</button></a></li>
                    <li><a href="/timeslot"><button class="nav-btn">Select Timeslot</button></a></li>
                    <li><a href="/searchsongs"><button class="nav-btnN">Search Songs</button></a></li>
                    <li><a href="/currentplaylist"><button class="nav-btn">Current Playlist</button></a></li>
                    <li><button class="nav-btn">Previous Playlists</button></li>
                 </ul>
            </nav>

            <main>
                <section class="SearchSongs">
                    <h2>Search Songs</h2>
                </section>

                <section class="Search">
                    <div class="title">Search for any song:</div>
                    <div class="search-section">
                        <label for="genre">Select Genre:</label>
                        <select id="genre" class="genre-select">
                            <option value="empty">-- Select Genre --</option>
                            <% genres.forEach(genre => { %>
                                <option value="<%= genre.toLowerCase() %>"><%= genre %></option>
                            <% }); %>
                        </select>
                        <span id="genre-error" class="error-message"></span>
                        
                        <br><br>
                    
                        <label for="song-search">Search Song:</label>
                        <input type="text" id="song-search" class="song-search" maxlength="20" placeholder="Search song (max 20 chars)">
                        <span id="song-error" class="error-message"></span>

                        <button id="apply-filters" class="apply-filters-button">Apply Filters</button>

                        <div class="song-image-section">
                            <img src="/images/elmambo.jpeg" id="song-image" alt="Song Image" class="song-image">
                        </div>
                    </div>
                </section>

                <section class="Playlist">
                    <div class="title">Your Current Playlist: <%= playlist.name %></div>
                    <div class="Playlistlist">
                        <ol>
                            <% playlist.songs.forEach(song => { %>
                                <li><%= song.title %> - <%= song.artist %></li>
                            <% }); %>
                        </ol>
                    </div>
                </section>
                

                <section class="CurrentSong">
                    <div class="song-info">
                        <div class="controls">
                            <button>&lt;&lt;</button>
                            <button id="play">||</button>
                            <button>&gt;&gt;</button> 
                        </div>
                        <div class="SongTitle">
                            <p>Dale Don Dale - Don Omar</p>
                        </div>
                    </div>
                    <div class="progress-bar">
                        <div class="progress"></div>
                    </div>
                </section>
                
            </main>
        </div>
        <footer>
            <ul>
                <li><a href="#">Contact Us</a></li>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Terms and Conditions</a></li>
            </ul>
        </footer>
        <script src="/javascript/searchsongs.js"></script>
        
    </body>
</html>
